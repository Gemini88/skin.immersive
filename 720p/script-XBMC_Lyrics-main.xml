<?xml version="1.0" encoding="UTF-8"?>

<window>
	
	<allowoverlay>no</allowoverlay>
	
	<coordinates>
		<system>1</system>
		<posx>0</posx>
		<posy>0</posy>
	</coordinates>
	
	<animation type="WindowOpen">
		<effect type="fade" start="0" end="100" time="400" delay="400"/>
		<effect type="slide" start="1280,0" end="0,0" time="800" delay="400" tween="cubic" easing="out" />
	</animation>
	
	<animation type="WindowClose">
		<effect type="fade" start="100" end="0" time="400" />
		<effect type="slide" start="0,0" end="1280,0" time="800" tween="cubic" easing="out" />
	</animation>
	
	<controls>
	
		<control type="group">
		
			<posx>700</posx>
			<posy>0</posy>
			<width>500</width>
			<height>720</height>
	
			<control type="image">
				
				<posx>0</posx>
				<posy>0</posy>
				<width>500</width>
				<height>720</height>
				<texture background="true">colors/color_white.png</texture>
				<colordiffuse>FanartDiffuse</colordiffuse>
				
			</control>
			
			<control type="label">
				
				<description>Scraper Label</description>
				<posx>32</posx>
				<posy>684</posy>
				<width>300</width>
				<height>20</height>
				<label>Powered by $ADDON[script.cu.lrclyrics 32199]</label>
				<font>Lyrics-Scraper</font>
				<textcolor>Label_Normal</textcolor>
				
			</control>
		
			<control type="label" id="200">
				<visible>false</visible>
			</control>
			
			<!-- ** Required ** Do not change <id> or <type> -->
			<control type="textbox" id="100">
				
				<description>textarea</description>
				<posx>20</posx>
				<posy>20</posy>
				<width>360</width>
				<height>608</height>
				<onup>101</onup>
				<ondown>101</ondown>
				<onleft>101</onleft>
				<onright>101</onright>
				<pagecontrol>101</pagecontrol>
				<font>font13</font>
				<textcolor>DDFFFFFF</textcolor>
				
			</control>
			
			<control type="spincontrol" id="101">
				
				<include>Common_Lyrics_SpinControl</include>
				<visible>Control.IsVisible(100)</visible>
				
			</control>
  		
			<!-- ** Required ** Do not change <id> or <type> -->
			<control type="list" id="110">
				
				<include>Common_Lyrics_List</include>
				<onleft>111</onleft>
				<onright>111</onright>
				<onup>999</onup>
				<ondown>110</ondown>
				<pagecontrol>111</pagecontrol>
				
			</control>
			
			<control type="spincontrol" id="111">
				
				<include>Common_Lyrics_SpinControl</include>
				<visible>Control.IsVisible(110)</visible>
				
			</control>
  		
			<!-- ** Required ** Do not change <id> or <type> -->
			<control type="list" id="120">
				
				<include>Common_Lyrics_List</include>
				<onleft>121</onleft>
				<onright>121</onright>
				<onup>120</onup>
				<ondown>120</ondown>
				<pagecontrol>121</pagecontrol>
				
			</control>
			
			<control type="spincontrol" id="121">
				
				<include>Common_Lyrics_SpinControl</include>
				<visible>Control.IsVisible(120)</visible>
				
			</control>
			
		</control>
		
	</controls>
	
</window>

		
